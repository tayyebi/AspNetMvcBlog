@model IEnumerable<v_Group>
@{
    ViewBag.Message = "ارسال پست جدید";
}
<form method="post">
    عنوان: <input type="text" name="Title"/>
    گروه:
    <select name="GroupId">
    @foreach (var item in Model)
    {
        <option value="@item.Id">@item.Name</option>
    }
    </select>
    خلاصه:
    <textarea name="Abstract" cols="40"></textarea>
    <hr/>
    هر چه میخواهد دل تنگت بگو:
    <textarea name="Body"></textarea>
    <input type="submit" value="ارسال @DateTime.Now.ToString()"/>
</form>